{
  "name": "landsat-web-tracker",
  "private": true,
  "scripts": {
    "frontend:dev": "pnpm --prefix ./frontend/ dev",
    "frontend:lint": "pnpm --prefix ./frontend/ lint",
    "frontend:format": "pnpm --prefix ./frontend/ format",
    "backend:dev": "poetry run uvicorn backend.main:app --port 8000 --reload --reload-dir ./backend",
    "backend:lint": "poetry run ruff check",
    "backend:format": "poetry run ruff check --fix",
    "dev": "pnpm run /:dev$/",
    "lint": "pnpm run /:lint$/",
    "format": "pnpm run /:format$/",
    "postinstall": "poetry install",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.6"
  }
}
